<div>
    <h1>Edit Item</h1>
</div>

<div class="row">
    <form action="/TodoItems/Edit" enctype="multipart/form-data" method="post">
        <div class="mb-3">
            <input type="hidden" class="form-control" id="UserDataId" name="Id" value="@Model.Id">

            <label for="Title" class="form-label">Title</label>
            <input type="text" class="form-control" id="Title" name="Title" value="@Model.Title" >

            <label for="Description" class="form-label">Description</label>
            <input type="text" class="form-control" id="Description" name="Description" value="@Model.Description" >

            <label for="Deadline" class="form-label">Deadline</label>
            <input type="datetime-local" class="form-control" id="Deadline" name="Deadline" value="@Model.Deadline.ToString("yyyy-MM-ddTHH:mm")" >

            <div class="mt-3">
                <label for="Pdf" class="form-label">Pdf</label>
                <input type="file" class="form-control" id="Pdf" name="Pdf" accept=".pdf">
                @if (!string.IsNullOrEmpty(Model.Pdf))
                {
                    <a href="@Url.Content("~/Pdf/" + Model.Pdf)" target="_blank">View PDF</a>
                }
            </div>
        </div>
        <button type="submit" class="btn btn-primary">Edit</button>
    </form>
</div>

<script>
    window.onload = function() {
        // Get the current date and time
        var now = new Date();
        var year = now.getFullYear();
        var month = ('0' + (now.getMonth() + 1)).slice(-2); // Months are zero-based
        var day = ('0' + now.getDate()).slice(-2);
        var hours = ('0' + now.getHours()).slice(-2);
        var minutes = ('0' + now.getMinutes()).slice(-2);

        // Format the date and time as required for the datetime-local input
        var currentDateTime = year + '-' + month + '-' + day + 'T' + hours + ':' + minutes;

        // Set the minimum value for the deadline input to the current date and time
        document.getElementById('Deadline').setAttribute('min', currentDateTime);
    };
</script>
